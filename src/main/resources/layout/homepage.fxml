<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="transparentPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.smartgh.view.homepage.HomepageViewImpl">
    <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
        <HBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <StackPane HBox.hgrow="NEVER">
                <ProgressIndicator fx:id="loadingImg" />
                <ImageView fx:id="plantImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            </StackPane>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                 <Label maxWidth="1.7976931348623157E308" text="Informazioni della pianta">
                     <font>
                         <Font name="System Bold" size="18.0" />
                     </font>
                 </Label>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <Label maxWidth="1.7976931348623157E308" styleClass="titleText" text="Nome pianta:">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font></Label>
                    <Label fx:id="plantNameLabel" maxWidth="1.7976931348623157E308" styleClass="normalText" />
                </HBox>
                <Label maxWidth="1.7976931348623157E308" styleClass="titleText" text="Descrizione:" VBox.vgrow="ALWAYS" />
                <Label fx:id="plantDescriptionLabel" maxWidth="1.7976931348623157E308" styleClass="descriptionText" wrapText="true" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets right="5.0" />
                    </VBox.margin>
                </Label>
            </VBox>
        </HBox>
        <VBox alignment="CENTER_LEFT" fillWidth="false" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <HBox spacing="5.0">
                <Label styleClass="titleText" text="State:" />
                <Label fx:id="statusLabel" styleClass="normalText" />
            </HBox>
        </VBox>
    </VBox>
    <padding>
        <Insets bottom="5.0" />
    </padding>
</ScrollPane>
